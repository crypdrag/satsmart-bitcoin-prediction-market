{
  "name": "satsmart-bitcoin-prediction-market",
  "version": "1.0.0",
  "description": "A Bitcoin prediction market DApp built on Internet Computer Protocol",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "preview": "vite preview",
    "start": "npm run dev",
    "deploy:local": "dfx deploy --network local",
    "deploy:ic": "dfx deploy --network ic",
    "deploy:playground": "dfx deploy --network playground",
    "generate": "dfx generate",
    "replica:start": "dfx start --background",
    "replica:stop": "dfx stop",
    "replica:restart": "dfx stop && dfx start --background",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src/**/*.{ts,tsx,css,md}"
  },
  "dependencies": {
    "@dfinity/agent": "^1.0.1",
    "@dfinity/auth-client": "^1.0.1",
    "@dfinity/candid": "^1.0.1",
    "@dfinity/identity": "^1.0.1",
    "@dfinity/principal": "^1.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.263.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.27",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-environment": "^1.1.3"
  },
  "keywords": [
    "bitcoin",
    "prediction-market",
    "icp",
    "internet-computer",
    "defi",
    "dao",
    "typescript",
    "react",
    "motoko"
  ],
  "author": "SatSmart Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/satsmart/bitcoin-prediction-market"
  }
}